<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/frameLayout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context=".ui.device.ConnectedDeviceFragment">

<TextView
    android:id="@+id/textView_connectedDevices_devicename"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="device name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/btn_device_disconnect"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="disconnect"
    app:layout_constraintStart_toEndOf="@+id/textView_connectedDevices_devicename"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>