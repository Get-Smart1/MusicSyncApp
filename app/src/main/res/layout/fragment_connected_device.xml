<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/frameLayout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context=".ui.device.ConnectedDeviceFragment">

    <TextView
        android:id="@+id/text_view_device_name_label_connected_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Name:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_device_name_value_connected_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="value"
        app:layout_constraintStart_toEndOf="@+id/text_view_device_name_label_connected_devices"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_device_status_label_connected_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Status:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_device_name_label_connected_devices" />

    <TextView
        android:id="@+id/text_view_device_status_value_connected_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="value"
        app:layout_constraintStart_toEndOf="@+id/text_view_device_name_label_connected_devices"
        app:layout_constraintTop_toBottomOf="@+id/text_view_device_name_label_connected_devices" />

    <Button
        android:id="@+id/btn_retry_connect_to_music_server_connected_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="R"
        app:layout_constraintEnd_toStartOf="@+id/btn_device_disconnect_connected_devices"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_device_disconnect_connected_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>